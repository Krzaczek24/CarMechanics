<UserControl x:Class="Dashboard.UserControls.Gauge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dashboard.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Viewbox x:Name="LayoutRoot" StretchDirection="Both" Stretch="Fill">
        <Canvas Height="100" Width="100">
            <Ellipse Stroke="Gray" StrokeThickness="2" Width="100" Height="100"/>
            <Ellipse Stroke="Gray" StrokeThickness="2" Width="4" Height="4" Canvas.Left="48" Canvas.Top="48" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Canvas x:Name="GaugeShield" Height="100" Width="100"/>
        </Canvas>
    </Viewbox>
</UserControl>
