<UserControl x:Class="ControlPanel.UserControls.Button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlPanel.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Ellipse Margin="0,0,0,0" Stroke="White" StrokeThickness="2" Panel.ZIndex="1"/>
        <Ellipse x:Name="PressedIndicator" Margin="0,0,0,0" Stroke="Gray" StrokeThickness="30" Visibility="Hidden"/>
        <Label x:Name="ButtonLabel" Content="" Panel.ZIndex="1" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,2"/>
    </Grid>
</UserControl>
