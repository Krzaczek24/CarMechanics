<UserControl x:Class="ControlPanel.UserControls.GearboxShifter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlPanel.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Margin="10,10,0,10" Stroke="White" Width="10" StrokeThickness="10" RadiusY="10" RadiusX="1"/>
        <Rectangle HorizontalAlignment="Center" Margin="0,10,0,10" Stroke="White" Width="10" StrokeThickness="10" RadiusY="10" RadiusX="1"/>
        <Rectangle HorizontalAlignment="Right" Margin="0,10,10,10" Stroke="White" Width="10" StrokeThickness="10" RadiusY="10" RadiusX="1"/>
        <Rectangle Height="10" Margin="10,0,10,0" Stroke="White" VerticalAlignment="Stretch" StrokeThickness="10" RadiusY="10" RadiusX="1"/>
        <Ellipse x:Name="Knob" HorizontalAlignment="Center" Height="30" Margin="0,0,0,0" Stroke="Gray" VerticalAlignment="Center" Width="30" StrokeThickness="20"/>
    </Grid>
</UserControl>
